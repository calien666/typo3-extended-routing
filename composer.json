{
  "name": "calien/extended-routing",
  "type": "typo3-cms-extension",
  "description": "Extended Routing Mappers for TYPO3",
  "authors": [
    {
      "name": "Markus Hofmann",
      "role": "Developer",
      "email": "typo3@calien.de"
    }
  ],
  "keywords": [
    "TYPO3",
    "Routing"
  ],
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin",
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "typo3/class-alias-loader": true,
      "typo3/cms-composer-installers": true,
      "helhum/typo3-console-plugin": true
    }
  },
  "extra": {
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "extension-key": "extended_routing",
      "ignore-as-root": false,
      "web-dir": ".Build/Web",
      "app-dir": ".Build"
    }
  },
  "license": "MIT",
  "require": {
    "php": ">=7.4",
    "typo3/cms-core": "^10.4 || ^11.5 || ^12.2"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "phpstan/phpstan": "^1.3",
    "phpunit/phpunit": "^9.5",
    "league/csv": "^9.7",
    "armin/editorconfig-cli": "^1.5",
    "typo3/cms-belog": "^12.2",
    "typo3/cms-filelist": "^12.2",
    "typo3/cms-info": " ^12.2",
    "typo3/cms-lowlevel": "^12.2",
    "typo3/cms-tstemplate": "^12.2",
    "typo3/cms-workspaces": "^12.2",
    "typo3/coding-standards": "^0.5"
  },
  "autoload": {
    "psr-4": {
      "Calien\\ExtendedRouting\\": "Classes"
    }
  },
  "scripts": {
    "ec:check": "ec -v -n --no-progress -e'var/log' -e'.Build' -e'.ddev' -e'phpstan-baseline.neon'",
    "ec:fix": "ec -v -n --fix -e'var/log' -e'.Build' -e'.ddev'",
    "cs:check": "php-cs-fixer fix --config .config/.php-cs-rules.php --ansi --diff --verbose --dry-run",
    "cs:fix": "php-cs-fixer fix --config .config/.php-cs-rules.php --ansi",
    "analyze:php": "phpstan analyse --ansi --no-progress --memory-limit=768M --configuration=.config/phpstan.neon",
    "lint:typoscript": "typoscript-lint --ansi --config=./.config/typoscript-lint.yml",
    "test:php": [
      "@test:php:unit",
      "@test:php:functional"
    ],
    "test:php:unit": "phpunit --colors=always --configuration .config/phpunit-unit.xml",
    "test:php:functional": "@test:php:unit --configuration .config/phpunit-functional.xml"
  }
}